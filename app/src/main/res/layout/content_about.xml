<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/jeans"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.harsha.dell.friendfinder.AboutAct"
    tools:showIn="@layout/activity_about">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friend Finder"
        android:typeface="normal"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:textColor="#e8752e" />

    <TextView
        android:textColor="#e8752e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.0.10"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="3dp"/>

    <ImageView

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/friend"/>

    <TextView
        android:textColor="#e8752e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© 2016 FriendApp Inc."
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#e8752e"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Rights Reserved"
        android:gravity="center"
        android:layout_marginTop="2dp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developers Details"
        android:onClick="details"
        android:textSize="15dp"
        android:background="#000ccdf9"
        android:textColor="#00ffe5" />


</LinearLayout>
